CREATE TABLE UTILISATEUR (
NUM_UTILISATEUR INTEGER CONSTRAINT utilisateur_num_util_pk PRIMARY KEY,
LOGIN VARCHAR2(25) NOT NULL,
PASSWORD VARCHAR(25) NOT NULL);

CREATE TABLE CONVERSATION (
NUM_CONV INTEGER CONSTRAINT conversation_num_conv_pk PRIMARY KEY,
NUM_UTILISATEUR INTEGER NOT NULL,
NUM_UTILISATEUR2 INTEGER, 
TEXTE_CONV VARCHAR(200) NOT NULL);

ALTER TABLE CONVERSATION ADD CONSTRAINT conversation_num_util_fk FOREIGN KEY (NUM_UTILISATEUR)
REFERENCES UTILISATEUR;

ALTER TABLE CONVERSATION ADD CONSTRAINT conversation_num_util2_fk FOREIGN KEY (NUM_UTILISATEUR2)
REFERENCES UTILISATEUR;
